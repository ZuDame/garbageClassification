        &::after 
            content: ''
            position absolute
            right 30rpx
            top 50%
            width 18rpx
            height 18rpx
            border-top 3rpx solid #999
            border-right 3rpx solid #999
            transform translateY(-50%) rotate(45deg) 
            transition .3s transform
    .active::after
        transform translateY(-75%) rotate(135deg)
