    .title 
        font-weight bold
        font-size 28rpx
        color #000
        position relative
        margin 30rpx 0
        background #eee
        padding 12rpx 30rpx
        // padding-left 24rpx
        // &::after
        //     content: ''
        //     position absolute
        //     left 0
        //     top 50%
        //     transform translateY(-50%)
        //     height 30rpx
        //     width 8rpx
        //     background #000
        &::after 
            content: ''
            position absolute
            right 30rpx
            top 50%
            width 18rpx
            height 18rpx
            border-top 3rpx solid #999
            border-right 3rpx solid #999
            transform translateY(-50%) rotate(45deg) 
            transition .3s transform
    .active::after
        transform translateY(-75%) rotate(135deg)
    .item-header
        display flex
        align-items center
        padding 30rpx 0
    .recyclable-img
        width 150rpx
        height 150rpx
        margin-right 18rpx
        border-radius 10rpx
    .desc
        font-size 26rpx
        // color #000
